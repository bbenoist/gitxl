{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Documentation",
      "type": "npm",
      "script": "build:doc",
      "problemMatcher": []
    },
    {
      "label": "Build Config Documentation",
      "type": "npm",
      "script": "build:doc:config",
      "problemMatcher": []
    },
    {
      "label": "Build CLI Documentation",
      "type": "npm",
      "script": "build:doc:cli",
      "problemMatcher": []
    },
    {
      "label": "Clean",
      "type": "npm",
      "script": "clean",
      "problemMatcher": []
    },
    {
      "label": "Check NPM Dependencies",
      "type": "npm",
      "script": "depcheck",
      "problemMatcher": []
    },
    {
      "label": "NPM Link",
      "type": "npm",
      "script": "link",
      "problemMatcher": []
    },
    {
      "label": "Prebuild",
      "type": "npm",
      "script": "prebuild",
      "problemMatcher": ["$tslint5"]
    },
    {
      "label": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Run tests",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "type": "npm",
      "script": "test",
      "problemMatcher": []
    },
    {
      "label": "Coverage",
      "group": "test",
      "type": "npm",
      "script": "coverage",
      "problemMatcher": []
    },
    {
      "label": "Build JSON Schema (Watch)",
      "group": "build",
      "type": "npm",
      "script": "build:json-schema:watch",
      "problemMatcher": []
    },
    {
      "label": "Build JSON Schema",
      "group": "build",
      "type": "npm",
      "script": "build:json-schema",
      "problemMatcher": []
    },
    {
      "label": "Build TypeScript",
      "group": "build",
      "type": "npm",
      "script": "build:ts",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build TypeScript (Watch)",
      "group": "build",
      "type": "npm",
      "script": "build:ts:watch",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Test (Watch)",
      "group": "test",
      "type": "npm",
      "script": "test:watch",
      "problemMatcher": []
    },
    {
      "label": "Lint Git Status",
      "group": "test",
      "type": "npm",
      "script": "lint:git",
      "problemMatcher": []
    },
    {
      "label": "Lint",
      "group": "test",
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Lint TS",
      "group": "test",
      "type": "npm",
      "script": "lint:ts",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Fix",
      "type": "npm",
      "script": "fix",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Fix (dry-run)",
      "type": "npm",
      "script": "fix:dry-run",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Lint JSON",
      "group": "test",
      "type": "npm",
      "script": "lint:json",
      "problemMatcher": []
    },
    {
      "label": "Lint Markdown",
      "group": "test",
      "type": "npm",
      "script": "lint:md",
      "problemMatcher": []
    },
    {
      "label": "Lint YAML",
      "group": "test",
      "type": "npm",
      "script": "lint:yaml",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Lint Tasks",
      "group": "test",
      "type": "npm",
      "script": "lint:tasks",
      "problemMatcher": []
    },
    {
      "label": "NPM Install",
      "type": "npm",
      "script": "install",
      "problemMatcher": []
    }
  ]
}
