{
  "license": "LicenseRef-LICENSE",
  "engines": {
    "node": ">=6.0.0"
  },
  "files": [
    "build/src"
  ],
  "scripts": {
    "clean": "rimraf build && rimraf coverage",
    "fix-ts": "tslint --fix --force --format verbose \"{contrib,src,test}/**/*.ts\"",
    "lint-ts": "tslint --force --format verbose \"{contrib,src,test}/**/*.ts\"",
    "prebuild": "npm run clean && npm run lint-ts && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "watch-build": "npm run build -- --watch",
    "test": "jest",
    "watch-test": "jest --watch",
    "coverage": "jest --coverage",
    "lint-js": "eslint --ext .jsx,.js .",
    "fix-js": "eslint --fix --ext .jsx,.js .",
    "fix-js-dry-run": "eslint --fix-dry-run --ext .jsx,.js .",
    "lint-json": "ts-node contrib/lint-json/main.ts",
    "lint-md": "markdownlint -i node_modules **/*.md",
    "lint-yaml": "yamllint --ignore=node_modules/**/*.yaml --ignore=node_modules/**/*.yml **/*.yaml **/*.yml"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/glob": "^7.1.0",
    "@types/jest": "^23.3.2",
    "@types/json5": "0.0.30",
    "@types/node": "^10.10.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "glob": "^7.1.3",
    "husky": "^1.0.0-rc.14",
    "jest": "^23.6.0",
    "json5": "^2.0.1",
    "markdownlint-cli": "^0.13.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.0.3",
    "yaml-lint": "^1.2.4"
  }
}
