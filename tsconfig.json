{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "target": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "bin/gitxl"],
  "exclude": ["node_modules", "**/*-spec.ts", "**/*.test.ts", "build"]
}
